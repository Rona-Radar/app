<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    
    <style name="CardContent" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/cardview_dark_background</item>
    </style>
    
    <style name="TextViewTitleStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    
    <style name="TextViewBodyStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="ImageViewStyle" parent="android:Widget">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:maxHeight">150dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
</resources>